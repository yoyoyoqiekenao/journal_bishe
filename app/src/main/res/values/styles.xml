<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>




    <!-- 透明wait对话框 -->
    <style name="DialogNoTitleStyleTranslucentBg" parent="android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 圆角alert对话框 -->
    <style name="DialogNoTitleRoundCornerStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_toast</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="MainTopTextStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="MainBtnStyle">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/matter_text_color</item>
    </style>

    <!-- RadioButton style -->
    <style name="style_radio_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/selector_text_color</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_top_window_animation">
        <item name="android:windowEnterAnimation">@anim/push_top_in</item>
        <item name="android:windowExitAnimation">@anim/push_top_out</item>
    </style>

    <style name="style_bottom_window_animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="style_left_window_animation">
        <item name="android:windowEnterAnimation">@anim/push_left_in</item>
        <item name="android:windowExitAnimation">@anim/push_left_out</item>
    </style>

    <style name="anim_bottonbar">
        <item name="android:windowEnterAnimation">@anim/anim_bottonbar_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottonbar_out</item>
    </style>

</resources>
